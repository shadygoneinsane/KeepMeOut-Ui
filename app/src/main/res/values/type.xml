<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.MyTheme.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MyTheme.Medium" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="lineHeight">45dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MyTheme.Medium.Light" parent="TextAppearance.MyTheme.Medium">
        <item name="android:textColor">@color/white_dimmer</item>
    </style>
</resources>